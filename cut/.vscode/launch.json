{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "01 - Tab;Fields=1",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": [
                "--fields=1",
            ]
        },
        {
            "name": "02 - Colon;Fields=1",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": [
                "--fields=1",
                "--delimiter=\":\""
            ]
        },
        {
            "name": "03 - Colon;Fields=1-3",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": [
                "--fields=1-3",
                "--delimiter=\":\""
            ]
        },
        {
            "name": "04 - External execution",
            "type": "go",
            "request": "attach",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port": 2345,
            "host": "127.0.0.1"
        },
    ]
}